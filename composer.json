{
    "name": "yourname/wp-cookieconsent",
    "description": "Ultra lightweight GDPR-compliant cookie consent WordPress plugin powered by vanilla-cookieconsent",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "plugin",
        "cookie",
        "consent",
        "gdpr",
        "privacy",
        "cookieconsent"
    ],
    "homepage": "https://github.com/orestbida/cookieconsent",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com",
            "homepage": "https://example.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/username/wp-cookieconsent/issues",
        "source": "https://github.com/username/wp-cookieconsent",
        "docs": "https://cookieconsent.orestbida.com"
    },
    "require": {
        "php": ">=8.1",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "WP_CookieConsent\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WP_CookieConsent\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=WordPress --extensions=php .",
        "lint-fix": "phpcbf --standard=WordPress --extensions=php .",
        "test": "phpunit",
        "analyze": "phpstan analyse --level=max .",
        "check": [
            "@lint",
            "@analyze",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "installer-name": "wp-cookieconsent"
    }
}

